################
# Makefile.in for ARCHER
# Ensure that you do a module load cray-hdf5-parallel before compilation
# ARCHER Seems to do a good job at picking up all lib paths by default,
# so no need to specify things like -lm, -llapack, etc... In fact, doing 
# so seems to result in segfaults sometimes.
################

#Compilers & Flags:
F90 = ftn
CC = cc
FFLAGS = -c -O3
CFLAGS = -c -O3
CLIBS = 

#Linking/Include flags:
AR = ar rcv
INC = I

#HDF5: 
HDF5_SUPPORT = "TRUE"

#MPI
MPI =
MPI_LIBS =
MPI_INC =

#LAPACK
LAPACK_LIBS =

#HDF5
ifeq ($(HDF5_SUPPORT),"TRUE")
HDF5 =
HDF5_LIBS =
HDF5_INC =
endif

#Link line and include path for all cfd2lcs dependencies;
#Note that CFD2LCS_PREFIX here *should* get updated updated during default install
CFD2LCS_PREFIX = /home/finnj/work/CFD/cfd2lcs/code/libcfd2lcs
CFD2LCS_SP_LIBS = -L$(CFD2LCS_PREFIX)/lib -lcfd2lcs_sp -lbspline_sp $(HDF5_LIBS) $(LAPACK_LIBS) $(MPI_LIBS) $(CLIBS) 
CFD2LCS_DP_LIBS = -L$(CFD2LCS_PREFIX)/lib -lcfd2lcs_dp -lbspline_dp $(HDF5_LIBS) $(LAPACK_LIBS) $(MPI_LIBS) $(CLIBS)
CFD2LCS_INC = -$(INC)$(CFD2LCS_PREFIX)/include/


